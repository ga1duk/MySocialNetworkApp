<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/postsFragment">

    <fragment
        android:id="@+id/postsFragment"
        android:name="com.company.mysocialnetworkapp.ui.PostsFragment"
        android:label="PostsFragment">
        <action
            android:id="@+id/action_postsFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.company.mysocialnetworkapp.ui.SignInFragment"
        android:label="SignInFragment" />
    <action
        android:id="@+id/action_global_signInFragment"
        app:destination="@id/signInFragment" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.company.mysocialnetworkapp.ui.SignUpFragment"
        android:label="SignUpFragment" />
    <action
        android:id="@+id/action_global_signUpFragment"
        app:destination="@id/signUpFragment" />
</navigation>